<!-- ========================== MODAL PARA EDITAR PERFIL ========================== -->
<!-- Este modal se abrirá cuando el usuario haga clic en el botón "Editar" -->
<div class="modal fade" id="modalEditarPerfil" tabindex="-1" aria-labelledby="modalEditarPerfilLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg"> <!-- modal-lg = tamaño grande para más espacio -->
    <div class="modal-content">

      <!-- ENCABEZADO DEL MODAL -->
      <div class="modal-header">
        <h5 class="modal-title" id="modalEditarPerfilLabel">
          <i class="fas fa-edit me-2"></i> Editar Mi Perfil
        </h5>
        <!-- Botón X para cerrar el modal -->
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>

      <!-- CUERPO DEL MODAL - AQUÍ VA EL FORMULARIO -->
      <div class="modal-body">
        <!-- Formulario para editar los datos del usuario -->
        <form id="formEditarPerfil" method="POST"
          action="/actualizar-perfil-usuario/<%= usuario.idUsuario || usuario.id %>">

          <!-- FILA 1: Nombre y Apellido -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="editarNombre" class="form-label">
                <strong>Nombres</strong>
              </label>
              <input type="text" class="form-control" id="editarNombre" name="nombreUsuario"
                placeholder="Ingresa tu nombre" required>
              <div id="editarNombreError" class="invalid-feedback" style="display: none;"></div>
            </div>
            
            <div class="col-md-6">
              <label for="editarApellido" class="form-label">
                <strong>Apellido</strong>
              </label>
              <input type="text" class="form-control" id="editarApellido" name="apellidoUsuario"
                placeholder="Ingresa tu apellido" required>
              <div id="editarApellidoError" class="invalid-feedback" style="display: none;"></div>
            </div>
          </div>

          <!-- FILA 2: Email y Teléfono -->
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="editarEmail" class="form-label">
                <strong>Correo Electrónico</strong>
              </label>
              <input type="email" class="form-control" id="editarEmail" name="email" placeholder="ejemplo@correo.com"
                required>
              <div id="editarEmailError" class="invalid-feedback" style="display: none;"></div>
            </div>
            <div class="col-md-6">
              <label for="editarTelefono" class="form-label">
                <strong>Celular</strong>
              </label>
              <input type="tel" class="form-control" id="editarTelefono" name="telefono" placeholder="Ej: 300 123 4567">
              <div id="editarTelefonoError" class="invalid-feedback" style="display: none;"></div>
            </div>
          </div>

          <!-- FILA 3: Contraseña (opcional) -->
          <div class="row mb-3">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <label class="form-label">
                  <strong>Contraseña</strong>
                </label>
                <button type="button" class="btn btn-basic btn-sm" id="btnCambiarContrasena">
                  <i class="fas fa-key me-1"></i> Cambiar Contraseña
                </button>
              </div>
              
              <!-- Campos de contraseña (inicialmente ocultos) -->
              <div id="camposContrasena" style="display: none;">
                <!-- Contraseña actual -->
                <div class="mb-3">
                  <label for="contrasenaActual" class="form-label">Contraseña Actual</label>
                  <input type="password" class="form-control" id="contrasenaActual" 
                         placeholder="Ingresa tu contraseña actual">
                  <div id="contrasenaActualError" class="invalid-feedback" style="display: none;"></div>
                </div>
                
                <!-- Nueva contraseña -->
                <div class="mb-3">
                  <label for="editarContrasena" class="form-label">Nueva Contraseña</label>
                  <input type="password" class="form-control" id="editarContrasena" name="contrasena"
                         placeholder="Ingresa tu nueva contraseña">
                  <div id="editarContrasenaError" class="invalid-feedback" style="display: none;"></div>
                </div>
                
                <!-- Confirmar nueva contraseña -->
                <div class="mb-2">
                  <label for="confirmarNuevaContrasena" class="form-label">Confirmar Nueva Contraseña</label>
                  <input type="password" class="form-control" id="confirmarNuevaContrasena"
                         placeholder="Confirma tu nueva contraseña">
                  <div id="confirmarNuevaContrasenaError" class="invalid-feedback" style="display: none;"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- SECCIÓN DE DIRECCIONES DINÁMICAS -->
          <div class="row mb-3">
            <div class="col-12">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <label class="form-label">
                  <strong>Direcciones</strong>
                  <small class="text-muted">(Opcional)</small>
                </label>
                <button type="button" class="btn btn-outline-terracota btn-sm" id="btnAgregarDireccion">
                  <i class="fas fa-plus me-1"></i> Agregar Dirección
                </button>
              </div>
              
              <!-- Contenedor dinámico para las direcciones -->
              <div id="contenedorDirecciones">
                <!-- Las direcciones se agregan dinámicamente aquí -->
              </div>
              
              <!-- Mensaje cuando no hay direcciones -->
              <div id="mensajeSinDirecciones" class="text-muted text-center p-3 border rounded" style="display: none;">
                <i class="fas fa-map-marker-alt me-2"></i>
                No hay direcciones agregadas. Haz clic en "Agregar Dirección" para añadir una.
              </div>
            </div>
          </div>

          <!-- MENSAJE DE ESTADO (se mostrará cuando haya errores o éxito) -->
          <div id="mensajeEstadoModal" class="alert d-none" role="alert"></div>

        </form>
      </div>

      <!-- PIE DEL MODAL - BOTONES DE ACCIÓN -->
      <div class="modal-footer">
        <!-- Botón para cancelar y cerrar el modal -->
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="fas fa-times me-1"></i> Cancelar
        </button>
        <!-- Botón para guardar los cambios -->
        <button type="submit" class="btn btn-terracota" id="btnGuardarCambios" form="formEditarPerfil">
          <i class="fas fa-save me-1"></i> Guardar Cambios
        </button>
      </div>

    </div>
  </div>
</div>