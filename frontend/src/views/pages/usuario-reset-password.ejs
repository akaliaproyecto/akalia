<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Restablecer contraseña | Akalia</title>
  <%- include('../partials/head.ejs'); %>
  <link rel="stylesheet" href="/styles/funciones-usuarios.css">
</head>
<body class="h-100 m-0 d-flex flex-column vh-100 bg-blanco-light">
  <%- include('../partials/navbar.ejs'); %>
  <main class="d-flex flex-row h-100">
    <section class="akalia-card w-75">
      <h2>Restablecer contraseña</h2>
      <form id="resetForm" action="/usuario-reset-password" method="POST">
        <input type="hidden" id="token" name="token" value="<%= token %>">
        <input type="hidden" id="userId" name="id" value="<%= id %>">
        <div class="mb-3">
          <label for="password" class="form-label">Nueva contraseña</label>
          <input type="password" id="password" name="password" class="form-control" required>
          <div id="passwordError" class="invalid-feedback" style="display:none"></div>
        </div>
        <div class="mb-3">
          <label for="passwordConfirm" class="form-label">Confirmar contraseña</label>
          <input type="password" id="passwordConfirm" name="passwordConfirm" class="form-control" required>
          <div id="passwordConfirmError" class="invalid-feedback" style="display:none"></div>
        </div>
        <button class="btn btn-verde" type="submit">Actualizar contraseña</button>
      </form>
    </section>
  </main>
  <%- include('../partials/footer.ejs'); %>
  <script>
    window.RESET_TOKEN = '<%= token %>';
    window.RESET_ID = '<%= id %>';
  </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"></script>
    <script src="/js/landing.js"></script>
    <script src="/js/login_signup.js"></script>
    <script src="/js/validaciones-login-signup.js"></script>
    <script src="/js/reset-password.js"></script>
    <script src="/js/captcha.js"></script>

    <!-- Bootstrap + FontAwesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>

</body>
<%- include('../partials/modal-login.ejs'); %>
  <%- include('../partials/modal-signup.ejs'); %>

</html>