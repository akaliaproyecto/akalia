<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Hacer Pedido | Akalia</title>
  <%- include('../partials/head.ejs'); %>
  <link rel="stylesheet" href="/styles/funciones-usuarios.css">
</head>

<body class="h-100 m-0 d-flex flex-column vh-100 bg-blanco-light">
  <%- include('../partials/navbar.ejs'); %>
  <div class="d-flex flex-row h-100">
    <%- include('../partials/sidebar.ejs'); %>
    <main class="flex-grow-1 d-flex flex-column justify-content-center align-content-center py-5">
      <section class="akalia-card overflow-auto">
        <div class="d-flex flex-md-row flex-column justify-content-between align-items-start pb-4 gap-3">
          <h2 class="akalia-title akalia-title--medium m-0">Editar Pedido</h2>
          <button class="btn btn-outline-secondary" onclick="history.back()">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
            </svg>
            Volver
          </button>
        </div>

        <div class="row g-4">
          <!-- Chat Section (Izquierda) -->
          <div class="col-lg-6">
            <div class="akalia-card-info">
              <h4 class="akalia-label mb-3">Chat con el Emprendimiento</h4>
              
              <!-- Chat Messages Container -->
              <div class="chat-container bg-white border rounded p-3 mb-3" style="height: 400px; overflow-y: auto;">
                <div class="chat-messages">
                  <!-- Message from client -->
                  <div class="message mb-3">
                    <div class="d-flex align-items-start">
                      <div class="avatar me-2">
                        <div class="rounded-circle bg-terracota-light d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                          <span class="text-terracota fw-bold small">JD</span>
                        </div>
                      </div>
                      <div class="message-content">
                        <div class="bg-light p-2 rounded">
                          <p class="mb-1 small">Hola, ¿podrías confirmar si el producto está disponible en color azul?</p>
                        </div>
                        <small class="text-muted">Juan Díaz - Hace 2 horas</small>
                      </div>
                    </div>
                  </div>

                  <!-- Message from seller -->
                  <div class="message mb-3">
                    <div class="d-flex align-items-start flex-row-reverse">
                      <div class="avatar ms-2">
                        <div class="rounded-circle bg-verde-light d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                          <span class="text-verde fw-bold small">YO</span>
                        </div>
                      </div>
                      <div class="message-content text-end">
                        <div class="bg-verde-light p-2 rounded">
                          <p class="mb-1 small">Sí, tengo disponible en azul. Te actualizo el precio por el color especial.</p>
                        </div>
                        <small class="text-muted">Hace 1 hora</small>
                      </div>
                    </div>
                  </div>

                  <!-- Message from client -->
                  <div class="message mb-3">
                    <div class="d-flex align-items-start">
                      <div class="avatar me-2">
                        <div class="rounded-circle bg-terracota-light d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                          <span class="text-terracota fw-bold small">JD</span>
                        </div>
                      </div>
                      <div class="message-content">
                        <div class="bg-light p-2 rounded">
                          <p class="mb-1 small">Perfecto, ¿cuál sería el nuevo precio?</p>
                        </div>
                        <small class="text-muted">Juan Díaz - Hace 30 minutos</small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Message Input -->
              <div class="chat-input d-flex gap-2">
                <input type="text" class="form-control" placeholder="Escribe tu mensaje..." id="messageInput">
                <button class="btn btn-primary bg-verde text-white border-0" onclick="sendMessage()">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send" viewBox="0 0 16 16">
                    <path d="M15.854.146a.5.5 0 0 1 .11.54L13.026 8.03a.5.5 0 0 1-.862-.237L12.5 5.5l-8.646 8.646a.5.5 0 0 1-.708-.708L11.5 4.5l-2.293-.336a.5.5 0 0 1-.237-.862L13.686.256a.5.5 0 0 1 .54.11z"/>
                  </svg>
                </button>
              </div>
            </div>

            <!-- Customer Information -->
            <div class="akalia-card-info mt-3">
              <h4 class="akalia-label mb-3">Información de Envío</h4>
              
              <div class="mb-3">
                <div class="d-flex align-items-center gap-2 mb-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person text-muted" viewBox="0 0 16 16">
                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                  </svg>
                  <strong>Nombre:</strong>
                  <span> <%= usuario.nombreUsuario %> <%= usuario.apellidoUsuario %> </span>
                </div>
                <div class="d-flex align-items-start gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt text-muted" viewBox="0 0 16 16">
                    <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                  </svg>
                  <div>
                  <strong>Dirección:</strong>
                  
                  <div class="flex-grow-1">
                    <!-- Select con las direcciones del usuario -->
                    <% if (usuario && Array.isArray(usuario.direcciones) && usuario.direcciones.length > 0) { %>
                      <select id="direccionSelect" name="direccionId" class="form-select mt-2">
                        <% usuario.direcciones.forEach(function(direccion) { %>
                          <option value="<%= direccion._id %>"><%= direccion.direccion %> — <%= direccion.ciudad %>, <%= direccion.departamento %></option>
                        <% }) %>
                      </select>
                    <% } else { %>
                      <div class="text-muted mt-2">
                        No hay direcciones registradas. Por favor agrega una en tu perfil.
                      </div>
                    <% } %>
                  </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Order Details Section (Derecha) -->
          <div class="col-lg-6">
            <div class="akalia-card-info">
              <h4 class="akalia-label mb-3">Detalles del Pedido</h4>
              
              <form id="orderForm">
                <!-- Product Info -->
                <div class="mb-4 p-3 border rounded bg-light">
                  <div class="d-flex align-items-center gap-3">
                    <img src="/img/imgs/157886928_10621828.jpg" alt="Producto" class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                    <div>
                      <h6 class="mb-1">Nombre emprendimiento</h6>
                      <p class="mb-0 text-muted small">Nombre prodcuto</p>
                      <p class="mb-0 text-muted small">Pedido #12345</p>
                    </div>
                  </div>
                </div>

                <!-- Order Status -->
                <div class="mb-3">
                  <label for="orderStatus" class="form-label fw-semibold">Estado del Pedido</label>
                  <select class="form-select" id="orderStatus" name="orderStatus" disabled>
                    <option value="pendiente">Pendiente</option>
                    <option value="confirmado" selected>Confirmado</option>
                    <option value="en-proceso">En Proceso</option>
                    <option value="listo">Listo para Entrega</option>
                    <option value="entregado">Entregado</option>
                    <option value="cancelado">Cancelado</option>
                  </select>
                </div>

                <!-- Quantity -->
                <div class="mb-3">
                  <label for="quantity" class="form-label fw-semibold">Cantidad</label>
                  <input type="number" class="form-control" id="quantity" name="quantity" min="1" disabled onchange="calculateTotal()">
                </div>

                <!-- Base Price -->
                <div class="mb-3">
                  <label for="basePrice" class="form-label fw-semibold">Precio Base por Unidad</label>
                  <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" id="basePrice" name="basePrice" value="25000" disabled>
                  </div>
                </div>

                <!-- New Price -->
                <div class="mb-3">
                  <label for="newPrice" class="form-label fw-semibold">Precio Nuevo por Unidad</label>
                  <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="number" class="form-control" id="newPrice" name="newPrice" value="28000" onchange="calculateTotal()" disabled>
                  </div>
                </div>

                <!-- Details -->
                <div class="mb-3">
                  <label for="orderDetails" class="form-label fw-semibold">Detalles</label>
                  <textarea disabled class="form-control" id="orderDetails" name="orderDetails" rows="3" placeholder="Especificaciones: tamaño, color, materiales especiales, etc.">Tamaño: Mediano
Color: Azul marino
Material: Cuero genuino
Grabado personalizado: "J.D."</textarea>
                </div>

                <!-- Total -->
                <div class="mb-4">
                  <div class="p-3 bg-verde-light rounded">
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="fw-semibold">Total a Pagar:</span>
                      <span class="h5 mb-0 text-verde fw-bold" id="totalAmount">$56,000</span>
                    </div>
                  </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex gap-2 justify-content-end">
                  <button type="button" class="btn btn-outline-danger" onclick="cancelOrder()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle me-1" viewBox="0 0 16 16">
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                      <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    Cancelar Pedido
                  </button>
                  <button type="button" class="btn btn-success" onclick="saveOrder()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle me-1" viewBox="0 0 16 16">
                      <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                      <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                    Guardar Cambios
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>

  <script>
    // Calculate total amount
    function calculateTotal() {
      const quantity = parseInt(document.getElementById('quantity').value) || 0;
      const newPrice = parseInt(document.getElementById('newPrice').value) || 0;
      const total = quantity * newPrice;
      
      document.getElementById('totalAmount').textContent = '$' + total.toLocaleString();
    }

    // Send message function
    function sendMessage() {
      const input = document.getElementById('messageInput');
      const message = input.value.trim();
      
      if (message) {
        const chatMessages = document.querySelector('.chat-messages');
        const messageElement = document.createElement('div');
        messageElement.className = 'message mb-3';
        messageElement.innerHTML = `
          <div class="d-flex align-items-start flex-row-reverse">
            <div class="avatar ms-2">
              <div class="rounded-circle bg-verde-light d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                <span class="text-verde fw-bold small">YO</span>
              </div>
            </div>
            <div class="message-content text-end">
              <div class="bg-verde-light p-2 rounded">
                <p class="mb-1 small">${message}</p>
              </div>
              <small class="text-muted">Ahora</small>
            </div>
          </div>
        `;
        
        chatMessages.appendChild(messageElement);
        input.value = '';
        
        // Scroll to bottom
        const chatContainer = document.querySelector('.chat-container');
        chatContainer.scrollTop = chatContainer.scrollHeight;
      }
    }

    // Save order function
    function saveOrder() {
      alert('Cambios guardados exitosamente');
    }

    // Cancel order function
    function cancelOrder() {
      if (confirm('¿Estás seguro de que deseas cancelar este pedido?')) {
        document.getElementById('orderStatus').value = 'cancelado';
        alert('Pedido cancelado');
      }
    }

    // Allow Enter key to send message
    document.getElementById('messageInput').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        sendMessage();
      }
    });

    // Initialize total calculation
    calculateTotal();
  </script>
</body>
</html>
